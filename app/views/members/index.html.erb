<% if member_signed_in? %>
  <% @members.each do |member| %>
    <div class="card m-3 border-0">
      <div class="row g-0">
        <div class="col-md-1">
          <img src=<%= member.photo %> class="img-fluid rounded" alt="member photo">
        </div>
        <div class="col-md-11">
          <div class="card m-2">
            <div class="card-body">
              <h5 class="card-title"><%= link_to member.name, member, class: "text-decoration-none" %></h5>
              <p class="card-text text-end" class="text-muted"><small>Number of posts: <%= member.post_counter %></small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
